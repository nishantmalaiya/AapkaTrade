<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/green</item>
        <!--<item name="colorPrimaryDark">@color/green</item>-->
        <item name="colorAccent">@color/grey</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:typeface">serif</item>
        <item name="android:alertDialogStyle">@style/CustomDialogTheme</item>
        <item name="android:colorPrimary" tools:targetApi="lollipop">@color/green_shad</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/green_shad</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/green_shad</item>
        <item name="android:editTextStyle">@style/myedittext</item>
        <item name="android:editTextPreferenceStyle">@style/myedittext</item>
        <item name="android:checkboxStyle">@style/customCheckBoxStyle</item>
        <item name="android:textColorHint">@color/hint_color</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>

    </style>


    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="Theme.Transparent" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Dialog.FullScreen" parent="Theme.AppCompat.Dialog">
        <item name="android:padding">0dp</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="textAllCaps">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:typeface">serif</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="myRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/ratingstars</item>
    </style>


    <style name="myedittext" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>

        <item name="android:textColorHint">@color/hint_color</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="android:textColorPrimary">@color/hint_color</item>
        <item name="android:textColorHighlight">@color/grey</item>
        <item name="android:textColorLink">@color/grey</item>

    </style>


    <style name="nofocus_edittext_theme" parent="TextAppearance.AppCompat">

        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/black</item>

        <item name="colorControlNormal">@color/black</item>
        <item name="android:textSize">@dimen/textsize_medium</item>


        <item name="colorControlActivated">@color/black</item>
        <item name="colorControlHighlight">@color/black</item>

        <item name="android:textColorHint">@color/hint_color</item>


        <item name="android:textColorPrimary">@color/hint_color</item>


        <item name="android:baseline">@color/grey</item>


    </style>

    <style name="myCalTheme" parent="Theme.AppCompat.NoActionBar">

        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorAccent">@color/green</item>
        <item name="colorControlNormal">@color/grey</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_vertical|center_horizontal</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>


    </style>

    <style name="myAddress" parent="android:Widget.TextView">
        <item name="android:layout_gravity">left</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textSize">@dimen/textsize_medium</item>
    </style>

    <style name="myRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="colorAccent">@color/green</item>
        <item name="colorControlHighlight">@color/green</item>
        <item name="android:colorPressedHighlight">@color/green</item>
        <item name="colorPrimaryDark">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="colorControlActivated">@color/green</item>
    </style>

    <style name="busiAssocHeaderText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:padding">@dimen/five_dip</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="busiAssocHeaderTab" parent="busiAssocHeaderText">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:paddingLeft">@dimen/ten_dip</item>
        <item name="android:paddingRight">@dimen/ten_dip</item>
        <item name="android:paddingTop">@dimen/ten_dip</item>
        <item name="android:paddingBottom">@dimen/ten_dip</item>
        <item name="android:background">@drawable/green_circle_border</item>
    </style>


    <style name="MyAppTheme" parent="@android:style/Theme.Holo.Light">
        <!-- you should set typeface which you want to override with TypefaceUtil -->
        <item name="android:typeface">serif</item>


    </style>


    <style name="CustomDialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:bottomBright">@android:color/transparent</item>
        <item name="android:bottomDark">@android:color/transparent</item>
        <item name="android:bottomMedium">@android:color/transparent</item>
        <item name="android:centerBright">@android:color/transparent</item>
        <item name="android:centerDark">@android:color/transparent</item>
        <item name="android:centerMedium">@android:color/transparent</item>
        <item name="android:fullBright">@android:color/transparent</item>
        <item name="android:fullDark">@android:color/transparent</item>
        <item name="android:topBright">@android:color/transparent</item>
        <item name="android:topDark">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>


    </style>


    <style name="CircularProgress" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/color_voilet</item>
        <item name="android:minHeight">1dp</item>
        <item name="android:maxHeight">1dp</item>
    </style>

    <style name="TranslucentNavigation" parent="AppTheme">
        <item name="android:windowTranslucentNavigation" tools:targetApi="kitkat">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="customCheckBoxStyle" parent="Theme.AppCompat.Light">

        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/green</item>

    </style>


    <style name="textviewstyle" parent="android:Theme.Light">

        <item name="android:textSize">40sp</item>

    </style>


    <color name="dark_orange">#ff623c</color>


    <style name="You.Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>