<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >


    <RelativeLayout
        android:id="@+id/relativeCompanyListheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        >

        <RelativeLayout
            android:id="@+id/linear_layout_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:layout_alignParentLeft="true"
            >


            <ImageView
                android:id="@+id/imgProfile"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_lstprdct"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/orange"
            android:layout_toRightOf="@+id/linear_layout_image"
            android:layout_marginLeft="3dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/product_list_heading"
                android:textColor="@color/white"
                android:textStyle="bold"
                />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/relativeCompanyListheader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        android:background="@color/white"
        >


        <android.support.v7.widget.RecyclerView
            android:id="@+id/productlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeCompanyDetailsList"
            ></android.support.v7.widget.RecyclerView>


    </RelativeLayout>


</RelativeLayout>