<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:layout_marginBottom="@dimen/ten_dip"

    >

    <Button
        android:id="@+id/imgCLose"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:paddingBottom="@dimen/five_dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal|center_vertical"
        android:foregroundGravity="center_horizontal|center_vertical"
        android:background="@drawable/bt_dialog_close"
        android:textSize="@dimen/twenty_five_dip"
        android:textStyle="bold"
        android:text="x"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="@dimen/ten_dip"
        android:layout_marginRight="@dimen/ten_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:background="@drawable/bg_dialog" >

        <RelativeLayout
            android:id="@+id/dialogue_toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/fifty_dip">


        </RelativeLayout>


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/activity_associate_agreement"
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"

            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/fifty_dip"
            android:orientation="vertical"
            android:weightSum="15"
            tools:context="com.example.pat.aapkatrade.user_dashboard.associateagreement.AssociateAgreementDialog">


            <LinearLayout
                android:id="@+id/activity_my_profile"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="14"
                android:orientation="vertical">

                <android.support.v4.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:layout_marginRight="@dimen/ten_dip"
                        android:layout_marginTop="@dimen/ten_dip"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:orientation="vertical"


                        >

                        <android.support.v7.widget.CardView
                            android:id="@+id/step1aLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dip"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            >

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"

                                android:orientation="vertical">


                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/imageViewProfilePic"
                                    android:layout_width="80dp"
                                    android:layout_height="80dp"
                                    android:layout_gravity="center_horizontal|center_vertical"
                                    android:layout_margin="@dimen/ten_dip"
                                    android:src="@drawable/ic_profile_user" />

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginBottom="@dimen/twenty_dip"
                                    android:layout_marginTop="@dimen/ten_dip"
                                    android:orientation="vertical">

                                    <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content">


                                        <TextView
                                            android:id="@+id/tvUserName"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_centerHorizontal="true"
                                            android:text="Name: Gunni Jaya Sharma"
                                            android:textColor="@color/black" />

                                        <TextView
                                            android:id="@+id/tvDate"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvUserName"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:text="Join Date: 2017-01-31 06:46:54"
                                            android:textColor="@color/orange" />

                                        <TextView
                                            android:id="@+id/tvReferenceNumber"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/tvDate"
                                            android:layout_centerHorizontal="true"
                                            android:layout_marginTop="5dp"
                                            android:text="Reference Number:vijayranj2"
                                            android:textColor="@color/black" />


                                    </RelativeLayout>


                                </LinearLayout>
                            </LinearLayout>
                        </android.support.v7.widget.CardView>

                        <android.support.v7.widget.CardView
                            android:id="@+id/step1bLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/ten_dip"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            android:padding="@dimen/twenty_dip">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:padding="10dp">


                                <TextView
                                    android:id="@+id/tvBussinessHeading"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/business_associate_heading"
                                    android:textColor="@color/black"
                                    android:textSize="18sp"
                                    android:textStyle="bold" />


                                <TextView
                                    android:id="@+id/tvBussinessDetails"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvBussinessHeading"
                                    android:layout_marginTop="5dp"
                                    android:maxLines="3"
                                    android:text="@string/bussiness_associate_details"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/tvMore"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/tvBussinessDetails"
                                    android:layout_marginTop="5dp"
                                    android:text="More..."
                                    android:textColor="@color/orange" />

                            </RelativeLayout>

                        </android.support.v7.widget.CardView>


                        <android.support.v7.widget.CardView
                            android:id="@+id/cardViewGraph"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/ten_dip"

                            android:layout_marginLeft="@dimen/ten_dip"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:layout_marginTop="@dimen/ten_dip"
                            android:padding="@dimen/twenty_dip">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">


                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:padding="20dp">


                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="100dp">

                                        <LinearLayout
                                            android:id="@+id/graphBar"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:weightSum="4">

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="bottom"
                                                android:layout_weight="1">

                                                <RelativeLayout
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true">

                                                    <ImageView
                                                        android:id="@+id/imBlackTraingle"
                                                        android:layout_width="25dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@drawable/black_traingle"
                                                        android:scaleType="fitXY" />


                                                    <View
                                                        android:layout_width="25dp"
                                                        android:layout_height="50dp"
                                                        android:layout_below="@+id/imBlackTraingle"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@color/black_line" />

                                                </RelativeLayout>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="bottom"
                                                android:layout_weight="1">


                                                <RelativeLayout
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true">

                                                    <ImageView
                                                        android:id="@+id/imRedTraingle"
                                                        android:layout_width="25dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@drawable/red_traingle"
                                                        android:scaleType="fitXY" />

                                                    <View
                                                        android:layout_width="25dp"
                                                        android:layout_height="75dp"
                                                        android:layout_below="@+id/imRedTraingle"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@color/red" />


                                                </RelativeLayout>

                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="bottom"
                                                android:layout_weight="1">

                                                <RelativeLayout
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true">

                                                    <ImageView
                                                        android:id="@+id/imYellowTraingle"
                                                        android:layout_width="25dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@drawable/yellow_traingle"
                                                        android:scaleType="fitXY" />


                                                    <View
                                                        android:layout_width="25dp"
                                                        android:layout_height="100dp"
                                                        android:layout_below="@+id/imYellowTraingle"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@color/yellow" />


                                                </RelativeLayout>


                                            </RelativeLayout>

                                            <RelativeLayout
                                                android:layout_width="0dp"
                                                android:layout_height="wrap_content"
                                                android:layout_gravity="bottom"
                                                android:layout_weight="1"
                                                android:orientation="vertical">

                                                <RelativeLayout
                                                    android:layout_width="25dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_centerHorizontal="true">

                                                    <ImageView
                                                        android:id="@+id/imGreenTraingle"
                                                        android:layout_width="25dp"
                                                        android:layout_height="wrap_content"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@drawable/green_traingle"
                                                        android:scaleType="fitXY" />


                                                    <View
                                                        android:layout_width="25dp"
                                                        android:layout_height="125dp"
                                                        android:layout_below="@+id/imGreenTraingle"
                                                        android:layout_centerHorizontal="true"
                                                        android:background="@color/green_line" />


                                                </RelativeLayout>

                                            </RelativeLayout>

                                        </LinearLayout>


                                        <View
                                            android:layout_width="match_parent"
                                            android:layout_height="2dp"
                                            android:layout_below="@+id/graphBar"
                                            android:background="#8A8A8A" />
                                    </RelativeLayout>

                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">


                                        <RelativeLayout
                                            android:id="@+id/green_indicator_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="@dimen/two_dip"
                                            android:gravity="left">

                                            <View
                                                android:id="@+id/green_indicator"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginRight="@dimen/ten_dip"
                                                android:background="@color/green_line" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/green_indicator"
                                                android:layout_marginLeft="@dimen/fourty_dip"
                                                android:text="@string/greenMark"
                                                android:textColor="@color/black"

                                                />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/yellow_indicator_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/green_indicator_layout"
                                            android:layout_marginTop="@dimen/two_dip"
                                            android:gravity="left">

                                            <View
                                                android:id="@+id/yellow_indicator"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginRight="@dimen/ten_dip"
                                                android:background="@color/yellow" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/yellow_indicator"
                                                android:layout_marginLeft="@dimen/fourty_dip"
                                                android:text="@string/yellowMark"
                                                android:textColor="@color/black"

                                                />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/red_indicator_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/yellow_indicator_layout"
                                            android:layout_marginTop="@dimen/two_dip"
                                            android:gravity="left">

                                            <View
                                                android:id="@+id/red_indicator"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginRight="@dimen/ten_dip"
                                                android:background="@color/red" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/red_indicator"
                                                android:layout_marginLeft="@dimen/fourty_dip"
                                                android:text="@string/redMark"
                                                android:textColor="@color/black"

                                                />

                                        </RelativeLayout>

                                        <RelativeLayout
                                            android:id="@+id/black_indicator_layout"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_below="@+id/red_indicator_layout"
                                            android:layout_marginTop="@dimen/two_dip"
                                            android:gravity="left">

                                            <View
                                                android:id="@+id/black_indicator"
                                                android:layout_width="20dp"
                                                android:layout_height="20dp"
                                                android:layout_marginRight="@dimen/ten_dip"
                                                android:background="@color/black_line" />


                                            <TextView
                                                android:layout_width="wrap_content"
                                                android:layout_height="wrap_content"
                                                android:layout_alignLeft="@+id/black_indicator"
                                                android:layout_marginLeft="@dimen/fourty_dip"
                                                android:text="@string/blackMark"
                                                android:textColor="@color/black"

                                                />

                                        </RelativeLayout>

                                    </RelativeLayout>


                                </RelativeLayout>


                            </RelativeLayout>


                        </android.support.v7.widget.CardView>

                    </LinearLayout>


                </android.support.v4.widget.NestedScrollView>


            </LinearLayout>


            <LinearLayout
                android:id="@+id/input_layout_agreement"
                android:layout_width="match_parent"
                android:layout_height="0dp"

                android:layout_marginBottom="@dimen/three_dip"
                android:layout_marginLeft="@dimen/three_dip"
                android:layout_marginRight="@dimen/three_dip"
                android:layout_marginTop="@dimen/three_dip"
                android:layout_weight="1"
                android:background="@drawable/orange_background">

                <CheckBox
                    android:id="@+id/agreement_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/orange"
                    android:checked="false"
                    android:shadowColor="@color/white"
                    android:theme="@style/customCheckBoxStyle" />

                <TextView
                    android:id="@+id/tv_agreement"
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/accept_t_and_c"
                    android:textColor="@color/white" />


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>
</RelativeLayout>