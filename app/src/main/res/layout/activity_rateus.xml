<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context="com.example.pat.aapkatrade.rateus.RateusActivity">


    <include
        android:id="@+id/includeLayout"
        layout="@layout/toolbar_layout" />



    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >


        <RelativeLayout
            android:id="@+id/relativeProductImage"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imgProduct"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scaleType="fitXY"
                android:src="@drawable/banner"
                android:layout_margin="10dp"

                />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Signal Booster"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvCategoriesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Electronics Repair"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            />
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <com.hedgehog.ratingbar.RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            hedgehog:clickable="true"
            hedgehog:halfstart="true"
            android:layout_centerHorizontal="true"
            hedgehog:starCount="5"
            hedgehog:starEmpty="@drawable/ic_white_star"
            hedgehog:starFill="@drawable/ic_orange_star"
            hedgehog:starHalf="@drawable/ic_orange_star"
            hedgehog:starImageHeight="40dp"
            hedgehog:starImageWidth="50dp"
            hedgehog:starImagePadding="20dp"/>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/butttonExperience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rate your experience"
            android:textColor="@color/green"
            android:background="?android:attr/selectableItemBackground"
            android:layout_centerHorizontal="true"
             />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvReviewHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/write_review"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edtWriteReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:inputType="text"
            android:layout_marginTop="10dp"
            />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/buttonSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:background="@drawable/orange_background"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="SUBMIT"
            />

        </RelativeLayout>



    </LinearLayout>



</LinearLayout>
