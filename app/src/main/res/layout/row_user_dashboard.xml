<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeDashboard"
    android:orientation="vertical"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    >

<RelativeLayout
    android:id="@+id/relativeRowDashboard"
    android:layout_width="100dp"
    android:layout_height="100dp"
    android:layout_centerHorizontal="true"
    android:background="@drawable/ic_polugon"
    >



   <ImageView
    android:id="@+id/imgDashboard"
    android:layout_width="45dp"
    android:layout_height="45dp"
    android:src="@drawable/ic_user"
    android:layout_centerHorizontal="true"
    android:layout_centerVertical="true"
       android:scaleType="fitCenter"
    />


</RelativeLayout>

    <TextView
        android:id="@+id/tvDashboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dashboard_heading"
        android:layout_below="@+id/relativeRowDashboard"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:textSize="12dp"
        />



</RelativeLayout>