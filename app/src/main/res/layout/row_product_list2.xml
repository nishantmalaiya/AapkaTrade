<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_product_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    >
   <com.chauthai.swipereveallayout.SwipeRevealLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:mode="normal"
    app:dragEdge="right">

    <!-- Your secondary layout here -->
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        >

        <RelativeLayout
            android:layout_width="160dp"
            android:layout_height="100dp"
            >


            <RelativeLayout
                android:id="@+id/editRelative"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@color/green"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Delete"
                    android:src="@drawable/ic_white_edit"
                    />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/deleteRelative"
                android:layout_width="80dp"
                android:layout_height="100dp"
                android:background="@color/red"
                android:layout_toRightOf="@+id/editRelative"
                >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="Delete"
                    android:src="@drawable/ic_white_delete"
                    />

            </RelativeLayout>


        </RelativeLayout>


    </FrameLayout>
    <!-- Your main layout here -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="100dp" >



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <LinearLayout
                    android:id="@+id/linearlayout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="10"
                    android:orientation="horizontal"
                    android:background="@color/white"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="3.3"
                        >

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/footweer"

                            />

                    </LinearLayout>


                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6.7"
                        android:orientation="vertical">


                        <TextView
                            android:id="@+id/tvProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Music Art Galaxy"
                            android:textColor="@color/black"
                            android:layout_marginTop="10dp"
                            android:textStyle="bold"
                            android:layout_marginLeft="10dp"
                            />


                        <TextView
                            android:id="@+id/tvCategoriesName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Groceries"
                            android:textColor="@color/item_details_color"
                            android:layout_marginLeft="10dp"
                            android:layout_below="@+id/tvProductName"
                            />


                        <TextView
                            android:id="@+id/tvProductPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/rupees_deatils"
                            android:textColor="@color/black"
                            android:layout_marginLeft="10dp"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            />


                        <TextView
                            android:id="@+id/tvProductCity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2 days Ago"
                            android:textColor="@color/item_details_color"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="15dp"

                            />


                    </RelativeLayout>

                    <!-- <LinearLayout
                         android:layout_width="0dp"
                         android:layout_weight="1"
                         android:layout_height="wrap_content">


                         <ImageView
                             android:id="@+id/imgMore"
                             android:layout_width="30dp"
                             android:layout_height="40dp"
                             android:src="@drawable/ic_more"
                             />


                     </LinearLayout>-->


                </LinearLayout>



            </RelativeLayout>


    </FrameLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>

</android.support.v7.widget.CardView>
