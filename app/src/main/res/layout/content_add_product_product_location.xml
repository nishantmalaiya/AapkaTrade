<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/ten_dip"
        android:background="@color/cardview_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:padding="@dimen/five_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dip">


            <Spinner
                android:id="@+id/spStatename"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="1dp"
                android:background="@drawable/simple_spinner_back" />

            <ImageView
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:padding="@dimen/five_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dip">


            <Spinner
                android:id="@+id/spCity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="1dp"
                android:background="@drawable/simple_spinner_back" />

            <ImageView
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>





    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:padding="@dimen/five_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dip">


            <Spinner
                android:id="@+id/spDeliver_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="1dp"
                android:background="@drawable/simple_spinner_back" />

            <ImageView
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:padding="@dimen/five_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dip">


            <Spinner
                android:id="@+id/spArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="1dp"
                android:background="@drawable/simple_spinner_back" />

            <ImageView
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>
    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/twenty_dip"
        android:layout_marginRight="@dimen/twenty_dip"
        android:layout_marginTop="@dimen/ten_dip"
        android:padding="@dimen/five_dip">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/two_dip">


            <Spinner
                android:id="@+id/spPincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_margin="1dp"
                android:background="@drawable/simple_spinner_back" />

            <ImageView
                android:layout_width="@dimen/twenty_dip"
                android:layout_height="@dimen/twenty_dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ten_dip"
                android:scaleType="fitXY"
                android:src="@drawable/ic_arrow" />

        </RelativeLayout>
    </android.support.design.widget.TextInputLayout>

            <RelativeLayout
                android:layout_width="match_parent"

                android:background="@color/color_voilet"

                android:layout_marginLeft="@dimen/twenty_dip"
                android:layout_marginRight="@dimen/twenty_dip"
                android:layout_marginTop="@dimen/ten_dip"
                android:padding="@dimen/five_dip"
                android:layout_height="50dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/white"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/continue_next" />



            </RelativeLayout>



    </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>