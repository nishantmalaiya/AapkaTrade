<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_address"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pat.aapkatrade.user_dashboard.address.AddressActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="13"
            android:orientation="vertical">

            <include
                android:id="@+id/toolbar"
                layout="@layout/toolbar_without_image_layout" />


            <android.support.v7.widget.CardView
                android:id="@+id/cardAddressNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/toolbar">

                <RelativeLayout
                    android:id="@+id/relativeAddNewAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/orange_back"
                    android:paddingLeft="@dimen/ten_dip"
                    android:paddingRight="@dimen/ten_dip"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add new address"
                        android:textColor="@color/white"
                        android:textStyle="bold" />


                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/addressRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardAddressNew"
                android:paddingLeft="@dimen/ten_dip"
                android:paddingRight="@dimen/ten_dip"
                android:paddingTop="@dimen/ten_dip"

                >

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <RelativeLayout
            android:id="@+id/relativeDeliverAddress"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:padding="@dimen/ten_dip">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Deliver Here"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </RelativeLayout>


    </LinearLayout>


</RelativeLayout>


