<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/contentAddProduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/ten_dip"
        android:background="@color/cardview_background">

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <include
                    android:id="@+id/upload_image_layout"
                    layout="@layout/upload_image_layout" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/companyPhotoRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="20dp"
                    android:visibility="gone" />

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/two_dip">


                        <Spinner
                            android:id="@+id/spCompanyName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="1dp"

                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />

                    </RelativeLayout>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/two_dip">


                        <Spinner
                            android:id="@+id/sp_service_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="1dp"
                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />

                    </RelativeLayout>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/two_dip">


                        <Spinner
                            android:id="@+id/spCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="1dp"
                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />

                    </RelativeLayout>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/text_input_subcategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/two_dip">


                        <Spinner
                            android:id="@+id/spSubCategory"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="1dp"
                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />

                    </RelativeLayout>
                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_area_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip">

                    <EditText
                        android:id="@+id/etAreaLocation"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:focusable="false"
                        android:hint="@string/area_location"
                        android:inputType="none"
                        android:paddingLeft="@dimen/ten_dip"
                        android:theme="@style/myedittext" />

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip">

                    <RelativeLayout
                        android:id="@+id/spStateLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spState"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />


                    </RelativeLayout>


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip"
                    android:padding="@dimen/five_dip">

                    <RelativeLayout
                        android:id="@+id/spcityLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Spinner
                            android:id="@+id/spCity"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:background="@drawable/simple_spinner_back" />

                        <ImageView
                            android:layout_width="@dimen/twenty_dip"
                            android:layout_height="@dimen/twenty_dip"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/ten_dip"
                            android:scaleType="fitXY"
                            android:src="@drawable/ic_arrow" />


                    </RelativeLayout>


                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/twenty_dip"
                    android:layout_marginRight="@dimen/twenty_dip"
                    android:layout_marginTop="@dimen/ten_dip">

                    <EditText
                        android:id="@+id/et_pincode"
                        style="@style/myedittext"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ten_dip"
                        android:hint="@string/pincode"
                        android:inputType="number"
                        android:maxLength="6"
                        android:paddingLeft="@dimen/ten_dip"
                        android:theme="@style/myedittext" />


                </android.support.design.widget.TextInputLayout>


            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>
    </android.support.v7.widget.CardView>

</LinearLayout>