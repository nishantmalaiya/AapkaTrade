<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_add_product_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pat.aapkatrade.user_dashboard.add_product.AddProductFragment">



    <include
        android:id="@+id/content_add_product_company_detail"
        layout="@layout/content_addproduct_general_info"
        />

    <include
        android:id="@+id/content_add_product_dynamic_form"
        layout="@layout/content_add_product_shop_store_details"
        android:visibility="gone" />

    <include
        android:id="@+id/content_add_product_product_location"
        layout="@layout/content_add_product_product_location"
        android:visibility="gone" />

    <include
        android:id="@+id/content_add_product"
        layout="@layout/content_add_product"
        android:visibility="gone" />

</LinearLayout>
