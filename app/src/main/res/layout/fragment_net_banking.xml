<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.pat.aapkatrade.payment.payment_method.NetBankingFragment">

  
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerBankList"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:orientation="horizontal"
        android:background="#F2F2F2"
        ></android.support.v7.widget.RecyclerView>



    <TextView
        android:id="@+id/tvBank"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bank"
        android:textSize="18sp"
        android:layout_marginTop="@dimen/twenty_dip"
        android:layout_marginLeft="@dimen/five_dip"
        android:layout_below="@+id/recyclerBankList"
        />


    <RelativeLayout
        android:id="@+id/spBussinessCategoryLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/five_dip"
        android:layout_marginTop="@dimen/five_dip"
        android:layout_marginLeft="@dimen/five_dip"
        android:layout_marginRight="@dimen/five_dip"
        android:layout_below="@+id/tvBank"
        >

        <Spinner
            android:id="@+id/spBussinessCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:background="@drawable/simple_spinner_back"
            android:gravity="center_horizontal" />


        <ImageView
            android:id="@+id/imgSpinner"
            android:layout_width="@dimen/five_dip"
            android:layout_height="@dimen/five_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/ten_dip"
            android:scaleType="fitXY"
            android:src="@drawable/ic_arrow" />



    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spBussinessCategoryLayout"
        android:layout_marginTop="40dp"
        >

        <Button
            android:id="@+id/buttonCancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_dip"
            android:text="CANCEL"
            android:background="@drawable/orange_background"
            android:textColor="@color/white"
            android:paddingLeft="@dimen/five_dip"
            android:paddingRight="@dimen/five_dip"
            />


        <Button
            android:id="@+id/buttonContinuePay"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/fifty_dip"
            android:text="CONTINUE TO PAY"
            android:background="@drawable/orange_background"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/buttonCancel"
            android:layout_marginLeft="@dimen/fifteen_dip"
            android:paddingLeft="@dimen/five_dip"
            android:paddingRight="@dimen/five_dip"
            />


    </RelativeLayout>


</RelativeLayout>
