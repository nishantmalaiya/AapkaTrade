<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/imageOtpverify"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_otp_icn"
            />


        <TextView
            android:id="@+id/tittleTxt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_data_1"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/imageOtpverify"
            android:layout_marginTop="15dp"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/tittleTxt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/otp_data_2"
            android:textAllCaps="false"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tittleTxt1"
            android:textSize="16sp"
            />


        <TextView
            android:id="@+id/couter_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:30"
            android:textSize="25sp"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/tittleTxt2"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_below="@+id/couter_textview"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></LinearLayout>

            <EditText
                android:id="@+id/editText1"
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_green_back"
                android:padding="13dp"
                android:inputType="number"
                android:hint=""
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="18sp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionNext"
                />

            <EditText
                android:id="@+id/editText2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_green_back"
                android:padding="13dp"
                android:inputType="number"
                android:hint=""
                android:maxLength="1"
                android:textSize="18sp"
                android:singleLine="true"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:imeOptions="actionNext"
                />


            <EditText
                android:id="@+id/editText3"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_green_back"
                android:padding="13dp"
                android:inputType="number"
                android:hint=""
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:maxLength="1"
                android:singleLine="true"
                android:textSize="18sp"
                android:imeOptions="actionNext"
                />


            <EditText
                android:id="@+id/editText4"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:background="@drawable/edit_text_green_back"
                android:inputType="number"
                android:maxLength="1"
                android:singleLine="true"
                android:hint=""
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:textSize="18sp"
                android:padding="13dp"
                android:imeOptions="actionDone"
                />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="wrap_content"></LinearLayout>

        </LinearLayout>

    </RelativeLayout>



</RelativeLayout>