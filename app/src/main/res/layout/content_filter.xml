<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10 "
    android:background="@color/white"
    >



    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:weightSum="2"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_weight="9.2"
        >

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:background="@color/screen_back"
            >


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="City"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_filter_list"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    />

            </RelativeLayout>
            <View
                android:id="@+id/View1"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relativeLayout1"
                android:background="@color/black"
                ></View>


            <RelativeLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/relativeLayout2"
                android:layout_below="@+id/View1"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Distance"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    />


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/ic_filter_list"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="10dp"
                    />

            </RelativeLayout>

            <View
                android:id="@+id/View2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/relativeLayout2"
                android:background="@color/black"
                ></View>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.2"
            >


            <android.support.v7.widget.RecyclerView
                android:id="@+id/cityList"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="invisible"
                >


            </android.support.v7.widget.RecyclerView>


            <RelativeLayout
                android:id="@+id/relativeDistanceLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


                <TextView
                    android:id="@+id/tvDeleveryDistance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delivery Distance"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:layout_centerHorizontal="true"
                    android:textSize="16dp"
                    />


                <TextView
                    android:id="@+id/tvRangeHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Range"
                    android:layout_below="@+id/tvDeleveryDistance"
                    android:layout_marginTop="20dp"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/orange"
                    android:textSize="16dp"
                    />


                <com.appyvet.rangebar.RangeBar
                    xmlns:custom="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/rangebar"
                    android:layout_width="match_parent"
                    android:layout_height="72dp"
                    custom:tickStart="5"
                    custom:tickInterval="1"
                    custom:tickEnd="10"
                    android:layout_marginLeft="16dp"
                    android:layout_below="@+id/tvRangeHeading"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="16dp"/>

            </RelativeLayout>


        </RelativeLayout>



    </LinearLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_weight="0.87"
        >


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            >

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:text="Clear All"
                android:textColor="@color/green"
                android:background="?android:attr/selectableItemBackground"
                />

            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:text="Apply Filters"
                android:textColor="@color/white"
                android:background="@color/orange"
                android:id="@+id/button3" />


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>