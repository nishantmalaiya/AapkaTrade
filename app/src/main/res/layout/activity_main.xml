<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_mobile_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#D94cbfa8">


        <RelativeLayout
            android:id="@+id/splash_footer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="40dp">

            <TextView
                android:id="@+id/tv_aapkatrade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aapka_data"
                android:textColor="@color/orange"
                android:textSize="45sp" />


            <TextView
                android:id="@+id/tv_aapkatrade_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/tv_aapkatrade"
                android:layout_alignRight="@+id/tv_aapkatrade"
                android:layout_below="@+id/tv_aapkatrade"
                android:layout_centerHorizontal="true"
                android:gravity="center_horizontal"
                android:text="yaha par sab kucch milta hai"
                android:textColor="@color/black"
                android:textSize="@dimen/textsize_medium" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="320dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/dotted_circle">

                <ImageView
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:id="@+id/circle_image"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"


                android:theme="@style/CircularProgress"

                android:indeterminateDrawable="@drawable/progress_bar_animation"

                style="@style/Widget.AppCompat.ProgressBar"





                    android:src="@drawable/ic_circle" />


            </RelativeLayout>


            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dotted_green_circle"
                android:padding="22dp"
                android:src="@drawable/ic_seller" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="55dp"
                android:layout_marginLeft="12dp"
                android:background="@drawable/dotted_green_circle"
                android:padding="22dp"
                android:src="@drawable/ic_business" />


            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="55dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/dotted_green_circle"
                android:padding="22dp"
                android:src="@drawable/ic_buyer" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:layout_alignParentBottom="true"
            >

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/ic_splash_footer" />


        </RelativeLayout>


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:weightSum="2"
        android:gravity="center_horizontal|center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:layout_height="wrap_content">

<RelativeLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="match_parent">
    <ImageView
android:layout_alignParentRight="true"
        android:layout_width="70dp"

        android:id="@+id/left_panel"


        android:src="@drawable/ic_left_prt"
        android:layout_height="70dp" />

</RelativeLayout>
       <RelativeLayout
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="wrap_content">

           <ImageView
               android:layout_width="70dp"
               android:layout_weight="1"
               android:id="@+id/right_panel"


               android:src="@drawable/ic_right_prt"
               android:layout_height="70dp"
               android:layout_alignParentTop="true"
               android:layout_alignParentLeft="true"
               android:layout_alignParentStart="true" />
       </RelativeLayout>

    </LinearLayout>


