<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/green"
    android:contentInsetLeft="0dp"
    android:contentInsetStart="0dp"
    app:contentInsetLeft="0dp"
    app:contentInsetStart="0dp"
    android:contentInsetRight="0dp"
    android:contentInsetEnd="0dp"
    app:contentInsetRight="0dp"
    app:contentInsetEnd="0dp"
    android:elevation="0dp"
    android:minHeight="?attr/actionBarSize"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/imgvew_home_icon"
            android:layout_width="@dimen/twenty_five_dip"
            android:layout_height="@dimen/twenty_five_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"

            android:adjustViewBounds="true"
            android:scaleType="fitCenter"

            android:src="@drawable/ic_navigation_home" />







        <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="right"

        android:layout_height="wrap_content">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:gravity="right"
    android:layout_marginRight="10dp"
    android:layout_alignParentRight="true"

    android:layout_height="wrap_content">




    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:gravity="center_vertical">



        <ImageView
            android:id="@+id/img_vew_location"
            android:layout_width="@dimen/twenty_five_dip"
            android:layout_height="@dimen/twenty_five_dip"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/tv_choose_state"
            android:src="@drawable/ic_marker" />


        <TextView
            android:id="@+id/tv_choose_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Choose statename"
            android:textColor="@color/white" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Spinner
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/spin_select_state"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"

            android:text="@string/select_state"/>

    </RelativeLayout>
</LinearLayout>


    </RelativeLayout>

    </RelativeLayout>
</android.support.v7.widget.Toolbar>